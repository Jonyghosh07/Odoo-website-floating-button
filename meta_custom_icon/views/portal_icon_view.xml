<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ChatToCompany" name="Chat With Company" inherit_id="website.layout">
        <xpath expr="//div[@id='footer']" position="inside">
            <a t-attf-href="#{website.r_link}" class="cy_link_web" target='_blank'>
                <div style="font-size:18px; 
                            color:white; 
                            letter-spacing:2px;
                            white-space: nowrap;
                            ">
                    <img t-attf-src="data:image/jpg;base64,{{ website.r_icon }}" align="center" height="20" width="20" style='margin:1px;padding-top:1px;'/>
                    <b>Feedback</b>
                </div>
            </a>
        </xpath>
    </template>
</odoo>